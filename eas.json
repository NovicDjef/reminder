{
    "cli": {
      "version": ">=3.0.0",
      "appVersionSource": "remote"
    },
    "build": {
      "preview": {
        "distribution": "internal",
        "android": {
          "buildType": "app-bundle"
        },
        "ios": {
          "simulator": true
        }
      },
      "production": {
        "android": {
          "buildType": "app-bundle"
        },
        "ios": {
          "buildConfiguration": "Release"
        }
      }
    },
    "submit": {
      "production": {
        "android": {
          "serviceAccountKeyPath": "./keys/play-store.json"
        }
      }
    }
  }